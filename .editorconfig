# .editorconfig - 编辑器配置统一

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown
[*.md]
trim_trailing_whitespace = false

# YAML
[*.{yaml,yml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Python
[*.py]
indent_size = 4
max_line_length = 100

# Dockerfile
[Dockerfile]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
